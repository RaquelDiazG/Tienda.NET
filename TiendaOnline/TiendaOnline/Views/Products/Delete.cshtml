@model TiendaOnline.Product

@{
    ViewBag.Title = "Delete";
}

<section id="cart_items">
    <div class="container">

        <div>
            @Html.ActionLink("Productos", "Admin")
        </div>

        <h3>¿Estás seguro de que deseas borrar el siguiente producto?</h3>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cantidad)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Precio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Precio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Foto)
            </dt>

            <dd>
                <img src="@Html.DisplayFor(model => model.Foto)" class="img-responsive" />
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-primary" />
                <a class="btn btn-default" href="@Url.Action("Admin")">Cancelar</a>
            </div>
        }
    </div>
</section>
