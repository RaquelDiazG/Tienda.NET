@model IEnumerable<TiendaOnline.Order>

@{
    ViewBag.Title = "Index";
}

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Id</td>
                        <td class="description">Productos</td>
                        <td class="price">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model){
                    <tr>
                        <td class="cart_product">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="cart_description">
                            <ul>
                                @foreach (var item2 in item.Products)
                                {
                                    <li>@Html.DisplayFor(modelItem => item2.Cantidad) x @Html.DisplayFor(modelItem => item2.Nombre)</li>
                                }
                            </ul>
                        </td>
                        <td class="cart_price">
                            <p>€</p>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->
